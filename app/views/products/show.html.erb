<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>
</section>

<section class="product-reviews">
  <article class="panel panel-default">
    <div class="panel-heading">
      <h3>Product Reviews</h2>
    </div>
    <% @product.reviews.reverse.each do |review| %>
    <div class="product-review panel-body">
      <p> Rating: <%= review.rating %>/5</p>
      <p> Reviewed by <%= User.find(review.user_id).first_name %> <%= User.find(review.user_id).last_name %> </p>
      <p><%= review.description %></p>
      <% if current_user.id == review.user_id %>
      <p><%= link_to fa_icon('trash'), 
              [review.product, review],
              class: 'btn btn-sm btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </p>
      <% end %>
    </div>
    <% end %>
  </article>
</section>

<section class="product-review-form">
  <%= form_for([@product, @product.reviews.build]) do |f| %>
  <% if @review && @review.errors.any? %>
      <div class="alert alert-danger">
        <p>
          <%= pluralize(@review.errors.count, "error") %> prohibited
          this review from being saved:
        </p>
        <ul>
          <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>
  <% if current_user %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3> Write a review </h3>
    </div>
    <div class="panel-body">
    <div class="form-group">
      <%= f.label :rating %>
      <%= f.select :rating, options_for_select((1..5).map{|i| i }), { include_blank: true }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= f.submit 'Post Review', class: 'btn btn-primary' %>
  </div>

<% end %>
<% end %>
