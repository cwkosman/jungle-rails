<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>
</section>

<section class="product-reviews">
  <article class="panel panel-default">
    <div class="panel-heading">
      <h3>Product Reviews</h2>
    </div>
    <% @product.reviews.each do |review| %>
    <div class="product-review panel-body">
      <p> Rating: <%= review.rating %></p>
      <p> Reviewed by <%= User.find(review.user_id).first_name %>
      <p> <%= review.description %> </p>
    </div>
    <% end %>
  </article>
</section>

<section class="product-review-form">
  <%= form_for([@product, @product.reviews.build]) do |f| %>
    <div class="form-group">
      <%= f.label :rating %>
      <%= f.select :rating, options_for_select((1..5).map{|i| i }), { include_blank: true }, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= f.submit 'Post Review', class: 'btn btn-primary' %>
  </p>
<% end %>
